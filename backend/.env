# Variables d'environnement pour ETE
# Développement local

# Django
SECRET_KEY=django-insecure-ete-dev-key-change-in-production
DEBUG=True
USE_SQLITE=True

# Base de données PostgreSQL (pour production)
DB_NAME=ete_db
DB_USER=postgres
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=5432

# Email (pour les notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Celery (pour les tâches asynchrones)
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379